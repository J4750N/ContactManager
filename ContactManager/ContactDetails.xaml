<Window x:Class="ContactManager.ContactDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="ContactDetails" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Contact Details Window" FontSize="32"
                   FontWeight="Bold" HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
            <TextBlock x:Name="NameTextBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock x:Name="PhoneTextBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock x:Name="EmailTextBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Window>
